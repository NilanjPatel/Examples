resource "aws_security_group" "echo" {
  name        = "echo-lb"
  description = "echo lb"
  vpc_id      =  aws_vpc.echo.id

  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port       = 0
    to_port         = 0
    protocol        = "-1"
    cidr_blocks     = ["0.0.0.0/0"]
  }
}
